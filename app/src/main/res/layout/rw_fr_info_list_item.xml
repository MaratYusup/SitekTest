<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rw_fr_info_list_height"
    android:layout_margin="@dimen/rw_fr_info_list_margin"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="@dimen/rw_fr_info_list_corner"
    app:cardElevation="@dimen/rw_fr_info_list_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/rw_fr_info_list_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/rw_fr_info_list_texts_title_margin_top"
            android:layout_marginStart="@dimen/rw_fr_info_list_texts_title_margin_left"
            android:layout_marginBottom="@dimen/rw_fr_info_list_texts_title_margin_bottom"
            android:autoSizeMaxTextSize="@dimen/rw_fr_info_list_texts_max"
            android:autoSizeMinTextSize="@dimen/rw_fr_info_list_texts_min"
            android:autoSizeStepGranularity="@dimen/rw_fr_info_list_texts_step_granularity"
            android:autoSizeTextType="uniform"
            android:gravity="left"
            android:text="название темы"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/rw_fr_info_list_texts_text_margin_top"
            android:layout_marginStart="@dimen/rw_fr_info_list_texts_text_margin_left"
            android:layout_marginBottom="@dimen/rw_fr_info_list_texts_text_margin_bottom"
            android:autoSizeMaxTextSize="@dimen/rw_fr_info_list_texts_max"
            android:autoSizeMinTextSize="@dimen/rw_fr_info_list_texts_min"
            android:autoSizeStepGranularity="@dimen/rw_fr_info_list_texts_step_granularity"
            android:autoSizeTextType="uniform"
            android:gravity="left"
            android:text="название темы"
            android:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


